        <section id="board">
        {{ render(controller('App\\Controller\\GameController::refreshPlateauGame', {game:game.id})) }}

        </section>


    </div>

{% endblock %}

{% block javascripts %}
    <script>
        let boucle
        $(document).ready(function(){
            boucle = setInterval(refreshGame, 3000);
        })
        $(document).on('click', '#finDeTour', function() {
            //mettre à jour game en changeant quiJoue
            //Bloquer le plateau (overlay, ...)
            //Relancer le timer...
        })
        function refreshGame() {
            $.ajax({
                url: "{{ path('get_tour', {game: game.id}) }}",
                success: function(data) {
                    console.log(data)
                    if (data === false) {
                        $('#message').html("Tour de votre adversaire" )
                        $('#plateau').load("{{ path('refresh_plateau_game', {game:game.id}) }}")
                    } else {
                        $('#message').html('à toi')
                        if (data === true){
                            $('#plateau').load("{{ path('refresh_plateau_game', {game:game.id}) }}")
                        }

                        clearInterval(boucle)
                    }
                },
                error: function(){
                }
            })
        }
        let action
        $(document).on('click', '#secret', function(){
            $("input:checkbox").click(function () {
                var bol = $("input:checkbox:checked").length >= 1;
                $("input:checkbox").not(":checked").attr("disabled", bol);
                if ($("input:checkbox:checked").length >= 1){
                    $('#valider').show();
                } else {
                    $('#valider').hide();
                }
            });
            action = 'secret' //mémorise l'action en cours
        })
        $(document).on('click', '#depot', function(){
            $("input:checkbox").click(function () {
                var bol = $("input:checkbox:checked").length >= 2;
                $("input:checkbox").not(":checked").attr("disabled", bol);
                if ($("input:checkbox:checked").length >= 2){
                    $('#valider').show();
                } else {
                    $('#valider').hide();
                }
            });
            action = 'depot' //mémorise l'action en cours

        })
        $(document).on('click', '#offre', function(){
            $("input:checkbox").click(function () {
                var bol = $("input:checkbox:checked").length >= 3;
                $("input:checkbox").not(":checked").attr("disabled", bol);
                if ($("input:checkbox:checked").length >= 3){
                    $('#valider').show();
                } else {
                    $('#valider').hide();
                }
            });
            action = 'offre' //mémorise l'action en cours

        })
        $(document).on('click', '.choixOffre', function(){

                var bol = $("input:checkbox:checked").length >= 1;
                $("input:checkbox").not(":checked").attr("disabled", bol);
                if ($("input:checkbox:checked").length >= 1){
                    $('#valider').show();
                } else {
                    $('#valider').hide();
                }

            action = 'offre_valid' //mémorise l'action en cours

        });
        $(document).on('click', '#valider', function(){
            $('#valider').hide();
            switch (action) {
                case 'secret':
                    donneesAction = {
                        action: 'secret',
                        carte: $('input[name="carte_select"]:checked').val()
                    }
                    break;
                case 'depot':
                    donneesAction = {
                        action: 'depot',
                        carte: {
                            card1:document.querySelectorAll('input[name="carte_select"]:checked')[0].value,
                            card2:document.querySelectorAll('input[name="carte_select"]:checked')[1].value
                        }
                    }
                    break;
                case 'offre':
                    donneesAction = {
                        action: 'offre',
                        carte: {
                            card1:document.querySelectorAll('input[name="carte_select"]:checked')[0].value,
                            card2:document.querySelectorAll('input[name="carte_select"]:checked')[1].value,
                            card3:document.querySelectorAll('input[name="carte_select"]:checked')[2].value
                        }
                    }
                    break;
                case 'offre_valid':
                    donneesAction = {
                        action: 'offre_valid',
                        carte: $('input[name="carte_select"]:checked').val()
                    }
                    break;
                case 'echange':
                    break;
            }
            $.ajax({
                url: "{{ path('action_game', {game: game.id}) }}",
                data: donneesAction,
                method: 'POST',
                success: function(data) {
                   refreshGame()
                },
                error: function(){
                }
            })
        })

    </script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <script>
        $(document).ready(function(){
            //script 1
            let elm = document.getElementById('chat');
            $("#chat_icon").click(function(){
                if(elm.className === ''){
                    elm.className = "active";
                    document.getElementById('chat_icon').className = "active";

                } else if(elm.className === 'active'){
                    elm.className = "";
                    document.getElementById('chat_icon').className = "";
                }
            });
        })
    </script>
{% endblock %}